    <title>Verify ID Forgot Password</title>
  
</head>
<body >
    <div class="container">
        <div class="forms">
            <div class="form login">
                <span class="title">
                    Verify User ID
                </span>
                <form action="/verify_id" method="post">
                    <div class="input-field">
                        <input type="text" placeholder="User ID" id="userid" name="userid" required>
                        <i class="uil uil-user icon"></i>
                    </div>
                    <div class="msg" id="msg">  
                    </div>
                    <div class="input-field button">
                        <input type="submit" value="Verify" name="verify_id" id="submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
